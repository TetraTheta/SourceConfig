root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.lua]
indent_style = tab

# Valve Key Value 3
[*.txt]
indent_style = tab

[/ulx/**]
indent_style = space

[*.sh]
end_of_line = lf
